<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/txtNomeSprint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textLinhaSprintDataInicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtNomeSprint"
        android:text="Data Inicio:" />

    <TextView
        android:id="@+id/txtDataInicioSprint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textLinhaSprintDataInicio"
        android:layout_alignBottom="@+id/textLinhaSprintDataInicio"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/textLinhaSprintDataInicio"
        android:text="TextView" />

    <TextView
        android:id="@+id/textLinhaSprintDataFim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textLinhaSprintDataInicio"
        android:text="Data Fim:" />

    <TextView
        android:id="@+id/txtDataFimSprint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textLinhaSprintDataFim"
        android:layout_alignBottom="@+id/textLinhaSprintDataFim"
        android:layout_alignLeft="@+id/txtDataInicioSprint"
        android:text="TextView" />

    <TextView
        android:id="@+id/txtDescricaoSprint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textLinhaSprintDataFim"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>